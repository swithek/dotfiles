[diff]
pager = "diff-so-fancy"

{{$env_type := promptStringOnce . "env_type" "Enter the target environment type (full, dev, text):" -}}
{{$git_global_name := promptStringOnce . "git_global_name" "Enter the global git name (can be empty):" -}}
{{$git_global_email := promptStringOnce . "git_global_email" "Enter the global git email (can be empty):" -}}
[data]
env_type = "{{ $env_type }}"
git_global_name = "{{ $git_global_name }}"
git_global_email = "{{ $git_global_email }}"
