ramp-1-foreground = ${colors.color11}
ramp-2-foreground = ${colors.color9}

[module/date]
type = internal/date
interval = 1
date = %a, %b %d
time = %R
date-alt = %a, %b %d %Y
time-alt = %T
label =  %date%  %time%

[module/pulseaudio]
